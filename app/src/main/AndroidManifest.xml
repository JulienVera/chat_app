<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jvera.chat_app">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icone"
        android:label="That Chat"
        android:roundIcon="@drawable/icone"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.UserRegisterActivity" />
        <activity
            android:name=".fragment.UserListFragment"
            android:theme="@style/AppTheme.SideMenu" />
        <activity
            android:name=".fragment.ProfilFragment"
            android:theme="@style/AppTheme.SideMenu" />
        <activity android:name=".activity.UserChatActivity" />
        <activity android:name=".activity.GuestRegisterActivity" />
        <activity android:name=".activity.GuestChatActivity" />
        <activity
            android:name=".activity.UserHomePageActivity"
            android:label="@string/title_activity_user_home_page"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>