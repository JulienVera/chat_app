<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jvera.chat_app.Login"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">

    <!--Register Now!-->
    <Button
        android:id="@+id/register_btn"
        android:layout_width="@+id/login_btn"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:text="@string/register"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintStart_toStartOf="@+id/login"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Text: Or-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/or"
        app:layout_constraintEnd_toEndOf="@+id/register_btn"
        app:layout_constraintStart_toStartOf="@+id/register_btn"
        app:layout_constraintTop_toBottomOf="@+id/register_btn" />

    <!--Text: Log in-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <!--Login info-->
    <EditText
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="AUTOFILL_HINT_USERNAME"
        android:ems="10"
        android:hint="@string/prompt_login"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="85dp" />

    <!--Password + hide and show-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/password"
        android:layout_width="@+id/login"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintStart_toStartOf="@+id/login"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:passwordToggleEnabled="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:autofillHints="AUTOFILL_HINT_PASSWORD"/>
    </android.support.design.widget.TextInputLayout>

    <!--fields not filled Error-->
    <TextView
        android:id="@+id/Error_pop"
        android:layout_width="@+id/password"
        android:layout_height="wrap_content"
        android:background="@color/some_red"
        android:textAlignment="center"
        android:text="@string/fill_fields"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <!--Sign in-->
    <Button
        android:id="@+id/login_btn"
        android:layout_width="@+id/Error_pop"
        android:layout_height="45dp"
        android:text="@string/send"
        app:layout_constraintEnd_toEndOf="@+id/Error_pop"
        app:layout_constraintStart_toStartOf="@+id/Error_pop"
        app:layout_constraintTop_toBottomOf="@+id/Error_pop" />

</android.support.constraint.ConstraintLayout>
